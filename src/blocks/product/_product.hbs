<div class="product">
  <div class="product__img">
    <div class="product__img-link"><img src="{{image}}" alt="There was an item image"></div>
  </div>
  <div class="product__title-block">
    <div class="product__title">
      <div class="product__title-link">{{title}}</div>
    </div>
    <div class="product__category">
      <div class="product__category-link">{{category}}</div>
    </div>
    <div class="product__add-to-cart">
      <a class="product__add-to-cart-link">+</a>
    </div>
    <div class="product__price">{{currency}}{{price}}</div>
    </div>
  </div>
</div>